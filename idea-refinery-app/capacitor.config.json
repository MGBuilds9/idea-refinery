{
  "appId": "com.idarefinery.app",
  "appName": "IdeaRefinery",
  "webDir": "dist",

  "ios": {
    "contentInset": "always"
  },
  "server": {
    "cleartext": true,
    "androidScheme": "http"
  },
  "plugins": {
    "StatusBar": {
      "style": "DARK",
      "overlaysWebView": true
    },
    "Keyboard": {
      "resize": "body",
      "style": "DARK",
      "resizeOnFullScreen": true
    }
  }
}
